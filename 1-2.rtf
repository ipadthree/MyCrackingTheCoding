#include <iostream>
#include <cstring>
using namespace std;

int main(int argc, const char * argv[]) {
    // insert code here...
    char sarray[128];
    char newarray[128];
    std::cout << "type in a string\n";
    cin>>sarray;
    int size = strlen(sarray);
    for (int i = 0; i < size; i++) {
        newarray[size - i - 1] = sarray[i];
    }
    newarray[size] = '\0';
    cout<<"origin is "<<sarray<<endl
        <<"reversal is "<<endl<<newarray;
    
    return 0;
}
